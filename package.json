{
    "name": "git-test",
    "version": "1.0.0",
    "description": "This is a test directory to learn Git and Node",
    "main": "index.html",
    "scripts": {
        "start": "npm run watch:all",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lite": "lite-server",
        "scss": "node-sass -o css/ css/",
        "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
        "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yassminmonsif/git-test.git"
    },
    "author": "yassmin",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yassminmonsif/git-test/issues"
    },
    "homepage": "https://github.com/yassminmonsif/git-test#readme",
    "devDependencies": {
        "lite-server": "^2.3.0",
        "node-sass": "^4.13.0",
        "onchange": "^3.3.0",
        "parallelshell": "^3.0.2"
    },
    "dependencies": {
        "bootstrap": "^4.0.0-alpha.6",
        "font-awesome": "^4.7.0"
    }
}
